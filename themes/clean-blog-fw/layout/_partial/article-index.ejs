<div class="post-preview">
    <a href="<%- config.root %><%- item.path %>">
        <h2 class="post-title">
            <%- item.title || theme.default_post_title || "Untitled" %>
        </h2>
     </a>   <p class="post-meta">
        <!-- Date and Author -->
        <% if(item.author) { %>
            <%- item.author %> on
        <% } %>
        <%= item.date.format(config.date_format) %>, <%- readingTime(item.content) %>
    </p>
        <% if (item.subtitle && item.subtitle.length) { %>
    <a href="<%- config.root %><%- item.path %>">
            <h3 class="post-subtitle">
                <%- item.subtitle %>...
            </h3>
    </a>
        <% } %>
 
</div>
<hr>