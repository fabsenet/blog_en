@import "variables.styl"
@import "mixins.styl"

body
  @extend .sans-serif
  font-size 20px
  color gray-dark

p
  line-height 1.5
  margin 30px 0
  text-align justify

p, li
  a
    text-decoration underline

h1, h2, h3, h4, h5, h6
  @extend .sans-serif
  font-weight 800

a
  color gray-dark
  &:hover, &:focus
    color brand-primary

hr.small
  max-width 100px
  margin 15px auto
  border-width 4px
  border-color #7a7a7a

.navbar
  position absolute
  top 0
  left 0
  width 100%
  z-index 3
  @extend .sans-serif
  .navbar-brand
    font-weight 800
    color white
    &:hover, &:focus
      color white-faded
  a
    text-shadow black 0 0 12px
  .nav
    li
      a
        text-transform uppercase
        font-size 12px
        font-weight 800
        letter-spacing 1px
        text-decoration none
        &:hover, &:focus
          background-color: transparent
  @media print
    display: table
  @media only screen and (min-width: 768px)
    background transparent
    border-bottom 1px solid transparent
    .navbar-brand
      padding 20px
    .nav
      li
        a
          color white
          padding 20px
          &:hover, &:focus
            color white-faded

.post-heading
  h1
    font-size 50px
    text-align center
    line-height 1.3
    margin-bottom: 40px

.intro-header
  .site-heading, .post-heading, .page-heading
    background-color: #f6f6f6
    padding 100px 0 50px
    color black
    @media only screen and (min-width: 1000px)
      padding 92px 0 150px 0
    &.archives
      color brand-primary
      margin-top 60px
  .site-heading, .page-heading
    h1
      margin-top 0
      font-size 60px
    .subheading
      font-size 25px
      line-height 1.1
      display block
      @extend .sans-serif
      font-weight 300
      margin 10px 0 0
    @media only screen and (min-width: 1000px)
      h1
        font-size 102px
  .post-heading
    h1
      font-size 35px
    .subheading, .meta
      line-height 1.1
      display block
    .subheading
      @extend .sans-serif
      font-size 24px
      margin 10px 0 30px
      font-weight 600
    .meta
      @extend .sans-serif
      font-weight 700
      line-height 1.5
      font-size 20px
      margin-left: 25px
    @media only screen and (min-width: 1000px)
      h1
        font-size 55px
      .subheading
        font-size 30px

.post-preview
  > a
    color gray-dark
    &:hover, &:focus
      text-decoration none
      color brand-primary
    > .post-title
      font-size 30px
      margin-top 30px
      margin-bottom 10px
      &.archive
        font-size 22px
    > .post-subtitle
      margin 0
      font-weight 300
      margin-bottom 10px
  > .post-meta
    color #c1c1c1
    font-size 18px
    font-style italic
    margin-top 0
    &.archive
      font-size 16px
    > a
      text-decoration none
      color gray-dark
      &:hover, &:focus
        color brand-primary
        text-decoration underline
  @media only screen and (min-width: 768px)
    > a
      > .post-title
        font-size 36px

.post-tags, .post-categories
  font-size 15px
  margin-top 30px
  margin-bottom 30px
  a
    border-bottom 1px dotted #ABABAB
    text-transform uppercase
    margin-right 10px
    &:hover, &:visited, &:active
      text-decoration none
      border-bottom none

.archive-before-pagination
  height 30px
footer
  margin-top: 40px
  padding 21px 0 65px
  background-color: #353535
  a
    color: #9a9a9a
    font-size 14px
    &:hover, &:focus
      color white
  .list-inline
    margin 0
    padding 26px 0 10px
  .copyright
    margin-top: 23px
    font-size 14px
    text-align center
    margin-bottom 0
    

.pager
  margin 20px 0 0
  li
    > a, > span
      @extend .sans-serif
      text-transform uppercase
      font-size 14px
      font-weight 800
      letter-spacing 1px
      padding 15px 25px
      background-color white
      border-radius 0
    > a:hover, > a:focus
      color white
      background-color brand-primary
      border 1px solid brand-primary
  .disabled
    > a, > a:hover, > a:focus, > span
      color gray
      background-color gray-dark
      cursor not-allowed

::-moz-selection
  color white
  text-shadow none
  background brand-primary

::selection
  color white
  text-shadow none
  background brand-primary

img::selection
  color white
  background transparent

img::-moz-selection
  color white
  background transparent

body
  webkit-tap-highlight-color brand-primary
